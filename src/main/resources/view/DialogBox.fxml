        <Label fx:id="dialog" alignment="BASELINE_CENTER" minHeight="-Infinity" style="-fx-background-color: #254f77; -fx-background-radius: 20;" text="Label" textFill="WHITE" wrapText="true">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            <HBox.margin>
                <Insets />
            </HBox.margin>
            <font>
                <Font name="Verdana" size="12.0" />
            </font>
        </Label>
        <ImageView fx:id="displayPicture" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
            <clip>
                <Circle radius="40" centerX="40" centerY="40" />
            </clip>
            <HBox.margin>
                <Insets left="5.0" right="5.0" bottom="5.0"/>
            </HBox.margin>
        </ImageView>
    </children>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
    <padding>
        <Insets bottom="20.0" />
    </padding>
</fx:root>

